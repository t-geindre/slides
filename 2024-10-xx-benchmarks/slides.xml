<slideshow width="960" height="540" background-color="#f5f9ff">
    <styles>
        <style name="title" pos-y="30" font-size="80" color="#172b4d"/>
        <style name="text" pos-y="70" font-size="50" color="#4990f9"/>
    </styles>
    <transitions>
        <transition name="horizontal" ease="quad" type="horizontal" duration="300" default="true"/>
        <transition name="scale" ease="back" type="scale" duration="300"/>
    </transitions>
    <slides>
        <slide>
            <text style="title">A benchmark...</text>
            <animation src="embd://gophers.png" tw="96" th="96" pos-y="52.5">
                <frame tx="4" ty="3" duration="3000" />
                <frame tx="5" ty="3" duration="3000" />
            </animation>
            <text style="text" pos-y="70">...is just another test!</text>
        </slide>
        <slide>
            <text style="title" font-size="60" pos-y="10">Performance optimization?</text>
            <img src="efficient-go-book.jpg" scale=".3" pos-y="50"/>
            <text style="text" pos-y="90">Data driven please!</text>
        </slide>
        <slide transition="scale">
            <text style="title" pos-y="40">Benchmarks!</text>
            <img src="go-test.png" pos-y="60"/>
        </slide>
        <slide>
            <img src="benchmark-results.png" scale=".5"/>
        </slide>
        <slide transition="scale">
            <text style="title" pos-y="20">Benchstat</text>
            <img src="benchstat.png" pos-y="60" scale=".8"/>
        </slide>
        <slide>
            <img src="normal-bench.png" scale=".8"/>
        </slide>
        <slide transition="scale">
            <text style="title" font-size="60" pos-y="10">Workflow Github</text>
            <img src="workflow-schema.png" pos-y="55" scale=".45" />
        </slide>
        <slide>
            <img src="pr-diff.png" scale=".7"/>
        </slide>
        <slide>
            <img src="pr-comment-big-diff.png" scale=".6"/>
        </slide>
        <slide transition="scale">
            <text style="title">Why?</text>
            <list style="text" pos-y="55">
                <item>Spot performances drops</item>
                <item>Measure improvements</item>
            </list>
        </slide>
        <slide>
            <text style="title">How?</text>
            <text style="text" pos-y="55">github.com/t-geindre/golem</text>
        </slide>
        <slide>
            <text style="title">Questions?</text>
            <text style="text" pos-y="55">github.com/t-geindre/golem</text>
        </slide>
    </slides>
</slideshow>